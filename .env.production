# PLACEHOLDER: Add any production-specific environment variables here
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=PLACEHOLDER_GENERATE_SECURE_KEY_HERE

# Database (Render will provide this)
DATABASE_URL=PLACEHOLDER_RENDER_WILL_PROVIDE

# Redis (Render will provide this)
REDIS_URL=PLACEHOLDER_RENDER_WILL_PROVIDE
CELERY_BROKER_URL=PLACEHOLDER_RENDER_WILL_PROVIDE
CELERY_RESULT_BACKEND=PLACEHOLDER_RENDER_WILL_PROVIDE

# CORS (Update with your production domain)
CORS_ORIGINS=PLACEHOLDER_YOUR_FRONTEND_URL

# Upload Configuration
UPLOAD_FOLDER=/tmp/uploads

# Celery Configuration
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=3600
CELERY_RESULT_EXPIRES=86400
